<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="停止垃圾清理扫描"
        android:textColor="#3c3c3c"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingBottom="35dp"
        android:text="是否停止扫描?"
        android:textColor="#656566"
        android:lineSpacingMultiplier="1.2"/>

    <View
        android:id="@+id/v_dialog_1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#999"/>

    <LinearLayout
        android:id="@+id/ll_dialog_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dialog_negative"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:text="取消"
            android:textColor="#888888"
            android:background="?android:attr/selectableItemBackground"/>

        <View
            android:id="@+id/v_dialog_2"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="#999"/>

        <TextView
            android:id="@+id/tv_dialog_positive"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:text="好的"
            android:textColor="#48b1fa"
            android:background="?android:attr/selectableItemBackground"/>
    </LinearLayout>
</LinearLayout>